---
// Importar estilos específicos para este componente
import '../../styles/components/home/hero.css';
---

<section class="hero">
  <div class="container">
    <div class="content">
      <div class="background-lines">
        <div
          class="line line-1"
          data-aos="fade-down"
          data-aos-duration="1000"
          data-aos-delay="200"
        ></div>
        <div
          class="line line-2"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="400"
        ></div>
        <div
          class="line line-3"
          data-aos="fade-down"
          data-aos-duration="1000"
          data-aos-delay="600"
        ></div>
        <div
          class="line line-4"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="400"
        ></div>
        <div
          class="line line-5"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="200"
        ></div>
      </div>

      <div class="main">
        <h2
          data-aos="fade-down"
          data-aos-duration="1000"
          data-aos-delay="400"
        >
          SOLUCIONES INTEGRADAS DE INGENIERÍA
        </h2>
        
        <h1
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="200"
        >
          Ingeniería Multidisciplinaria
        </h1>
        
        <h1 class="highlight"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="250"
        >
          para Proyectos de Vanguardia
        </h1>
        
        <p data-aos="fade-up" data-aos-duration="1000" data-aos-delay="400">
          Firma consultora especializada en servicios integrados de ingeniería civil, 
          mecatrónica y empresarial, ofreciendo soluciones innovadoras para proyectos 
          de construcción, automatización y optimización de procesos.
        </p>
        
        <div
          class="hero-form"
          data-aos="fade-up"
          data-aos-duration="1000"
          data-aos-delay="600"
        >
          <input type="email" placeholder="Ingresa tu correo para recibir información..." />
          <button>Solicitar Consulta</button>
        </div>
      </div>

      <div class="hero-light"></div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Efectos de parallax para el hero
    window.addEventListener("mousemove", (e: MouseEvent) => {
      const mouseX = e.clientX / window.innerWidth;
      const mouseY = e.clientY / window.innerHeight;
      
      const heroLight = document.querySelector(".hero .hero-light") as HTMLElement | null;
      
      if (heroLight) {
        heroLight.style.transform = `translate(${mouseX * 20}px, ${mouseY * 20}px)`;
      }
      
      // Movimiento sutil de las líneas de fondo
      const lines = document.querySelectorAll<HTMLElement>(".hero .background-lines .line");
      if (lines && lines.length > 0) {
        lines.forEach((line, index) => {
          const movement = (index % 2 === 0) ? 1 : -1;
          if (line) {
            line.style.transform = `translateX(${mouseX * 10 * movement}px)`;
          }
        });
      }
    });
  });
</script>