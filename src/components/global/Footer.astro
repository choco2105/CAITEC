---
// Footer.astro - Componente de pie de página mejorado
import '../../styles/components/global/footer.css';

// Obtener el año actual para el copyright
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="footer-top-border"></div>
  
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <img src="/assets/global/logo-white.svg" alt="CAITEC" />
          <span>CAITEC</span>
        </a>
        <p class="brand-tagline">Soluciones integradas para la ingeniería del futuro</p>
        <p class="brand-description">
          Firma consultora multidisciplinaria especializada en servicios integrados 
          de ingeniería civil, mecatrónica y empresarial.
        </p>
        <div class="footer-social">
          <a href="#" target="_blank" rel="noopener" aria-label="LinkedIn">
            <i class="bx bxl-linkedin"></i>
          </a>
          <a href="#" target="_blank" rel="noopener" aria-label="Instagram">
            <i class="bx bxl-instagram"></i>
          </a>
          <a href="#" target="_blank" rel="noopener" aria-label="YouTube">
            <i class="bx bxl-youtube"></i>
          </a>
        </div>
      </div>
      
      <div class="footer-links">
        <div class="footer-column">
          <h4>Compañía</h4>
          <nav>
            <a href="/nosotros">Quiénes Somos</a>
            <a href="/nosotros#equipo">Nuestro Equipo</a>
            <a href="/nosotros#historia">Nuestra Historia</a>
            <a href="/nosotros#valores">Valores</a>
          </nav>
        </div>
        
        <div class="footer-column">
          <h4>Servicios</h4>
          <nav>
            <a href="/servicios/ingenieria-civil">Ingeniería Civil</a>
            <a href="/servicios/mecatronica">Automatización e IoT</a>
            <a href="/servicios/consultoria">Consultoría Empresarial</a>
            <a href="/servicios/geoespacial">Análisis Geoespacial</a>
          </nav>
        </div>
        
        <div class="footer-column">
          <h4>Recursos</h4>
          <nav>
            <a href="/proyectos">Proyectos</a>
            <a href="/blog">Blog</a>
            <a href="/recursos/brochure" target="_blank">Brochure</a>
            <a href="/recursos/portfolio" target="_blank">Portafolio</a>
          </nav>
        </div>
        
        <div class="footer-column">
          <h4>Contáctanos</h4>
          <div class="contact-info">
            <p>
              <i class="bx bx-map"></i>
              <span>Jr. Chota 1454, Lima, Perú</span>
            </p>
            <p>
              <i class="bx bx-envelope"></i>
              <a href="mailto:contacto@caitec.pe">contacto@caitec.pe</a>
            </p>
            <p>
              <i class="bx bx-phone"></i>
              <a href="tel:+51987654321">+51 987 654 321</a>
            </p>
            <p>
              <i class="bx bx-time-five"></i>
              <span>Lun - Vie, 9:00 a.m. - 6:00 p.m.</span>
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} CAITEC. Todos los derechos reservados.
      </p>
      
      <nav class="footer-legal">
        <a href="/terminos-condiciones">Términos y Condiciones</a>
        <span class="divider">|</span>
        <a href="/politica-privacidad">Política de Privacidad</a>
        <span class="divider">|</span>
        <a href="/mapa-sitio">Mapa del Sitio</a>
      </nav>
    </div>
  </div>
  
  <div class="footer-bg-element element-1"></div>
  <div class="footer-bg-element element-2"></div>
</footer>